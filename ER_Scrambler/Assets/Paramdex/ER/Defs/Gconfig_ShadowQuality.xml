      <Description>Shadow is enabled</Description>
      <DisplayFormat>%u</DisplayFormat>
      <EditFlags>None</EditFlags>
      <Maximum>1</Maximum>
    </Field>
    <Field Def="u8 maxFilterLevel = 1">
      <DisplayName>Maximum Filter Level</DisplayName>
      <Enum>GX_SHADOW_FILTER_LEVEL</Enum>
      <Description>Maximum filter quality allowed</Description>
      <DisplayFormat>%u</DisplayFormat>
      <EditFlags>None</EditFlags>
      <SortID>100</SortID>
    </Field>
    <Field Def="dummy8 dmy[2]">
      <DisplayName>dmy</DisplayName>
      <SortID>9999</SortID>
    </Field>
    <Field Def="u32 textureSizeScaler = 1">
      <DisplayName>Texture Size Scalar</DisplayName>
      <Description>Scaler with set shadow map resolution</Description>
      <DisplayFormat>%u</DisplayFormat>
      <EditFlags>None</EditFlags>
      <Minimum>1</Minimum>
      <Maximum>100</Maximum>
      <SortID>1</SortID>
    </Field>
