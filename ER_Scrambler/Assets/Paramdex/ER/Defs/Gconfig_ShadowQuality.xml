      <EditFlags>None</EditFlags>
      <Minimum>128</Minimum>
      <Maximum>4096</Maximum>
      <SortID>4</SortID>
    </Field>
    <Field Def="s32 blurCountBias = -1">
      <DisplayName>Blur Count Bias</DisplayName>
      <Description>Blur count bias (set count bias, unchanged at 0)</Description>
      <DisplayFormat>%u</DisplayFormat>
      <EditFlags>None</EditFlags>
      <Minimum>-4</Minimum>
      <Maximum>0</Maximum>
      <SortID>5</SortID>
